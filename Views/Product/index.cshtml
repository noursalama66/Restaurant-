@using FinalProject.Models.Dto.Product

@model List<ProductDto>
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "All Product";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Projects</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="project-actions text-right" style="margin-top: 20px; margin-right: 20px;">
                <a class="btn btn-warning btn-sm text-white" href="/Product/Create">
                    <i class="fas fa-user"></i>
                    Add product
                </a>
            </div>

            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                           
                            <th style="width: 15%">product name</th>
                            <th style="width: 15%">product price</th>
                            <th style="width: 15%">product description</th>

                            <th>product catrgory</th>

                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                
                                <td>
                                    <a>@product.ProductName</a>
                                    <br />
                                    
                                </td>
                                <td>@product.Price</td>
                                <td>@product.Description</td>
                                <td>@product.CategoryName </td>
                               
                               
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" asp-action="update" asp-route-id="@product.ProductId" asp-route-name="@product.ProductName" asp-route-price="@product.Price">
                                        <i class="fas fa-pencil-alt"></i>
                                        update
                                    </a>
                                    <form asp-action="Delete" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@product.ProductId" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?');">
                                            <i class="fas fa-trash"></i>
                                            Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <script src="../../plugins/jquery/jquery.min.js"></script>
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../dist/js/adminlte.min.js"></script>
    <script src="../../dist/js/demo.js"></script>
</body>
</html>