@{
    ViewBag.PageTitle = "Admin Dashboard";
    ViewBag.CardTitle = "Quick Actions";
    Layout = "~/Views/Shared/_Dashboard.cshtml";  // Assuming you're using the same layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
    <!-- Custom Styles -->
    <style>
        .btn-dashboard {
            padding: 20px;
            margin: 15px;
            font-size: 18px;
            width: 200px;
        }
        .card-title {
            font-size: 24px;
            font-weight: bold;
            text-align: center;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.CardTitle</h3>
        </div>

        <div class="card-body">
            <div class="text-center">
                <a href="/Employees/Index" class="btn btn-primary btn-dashboard">
                    <i class="fas fa-user"></i>  Employee
                </a>
                <a href="/Product/index" class="btn btn-success btn-dashboard">
                    <i class="fas fa-box"></i> Product
                </a>
                <a href="/Categories/Create" class="btn btn-info btn-dashboard">
                    <i class="fas fa-tags"></i> Category
                </a>
                <a href="/Departments/Create" class="btn btn-warning btn-dashboard">
                    <i class="fas fa-building"></i> Department
                </a>
            </div>
        </div>
    </div>
</section>

<!-- jQuery -->
<script src="../../plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/adminlte.min.js"></script>

</body>
</html>
