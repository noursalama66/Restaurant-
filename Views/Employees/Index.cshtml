@using FinalProject.Models.Dto.Employee

@model List<EmployeeDto>
@{
    ViewBag.PageTitle = "Employees Management";
    ViewBag.CardTitle = "All Employees";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Projects</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card">
            <div class="project-actions text-right" style="margin-top: 20px; margin-right: 20px;">
                <a class="btn btn-warning btn-sm text-white" href="/Employees/Create">
                    <i class="fas fa-user"></i>
                    New Employee
                </a>
            </div>

            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">#</th>
                            <th style="width: 15%">Employee name</th>
                            <th style="width: 15%">Employee Position</th>
                            <th>Employee Department</th>
                            <th>Employee Salary</th>
                            <th style="width: 8%" class="text-center">Status</th>
                            <th style="width: 22%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                        {
                            <tr>
                                <td>@employee.EmpId</td>
                                <td>
                                    <a>@employee.EmpName</a>
                                    <br />
                                    <small>@employee.username</small>
                                </td>
                                <td>@employee.Position</td>
                                <td>@employee.DeptName</td>
                                <td>@employee.salary LE</td>
                                <td class="project-state">
                                    <span class="badge badge-success">Full Time</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-info btn-sm" asp-action="ChangePassword" asp-route-id="@employee.EmpId" asp-route-name="@employee.EmpName" asp-route-oldpassword="@employee.password">
                                        <i class="fas fa-pencil-alt"></i>
                                        Change Password
                                    </a>
                                    <form asp-action="Delete" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@employee.EmpId" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this employee?');">
                                            <i class="fas fa-trash"></i>
                                            Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    <script src="../../plugins/jquery/jquery.min.js"></script>
    <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../dist/js/adminlte.min.js"></script>
    <script src="../../dist/js/demo.js"></script>
</body>
</html>